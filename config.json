{
    "name": "Mnist_LeNet",
    "n_gpu": 1,
    "track_experiment": false,

    "wandb": {
        "project": "Mnist",
        "entity" : "aicomtrue",
        "id": "run-1"
    },

    "arch": {
        "type": "ex_model",
        "args": {}
    },

    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "loss": "nll_loss",

    "metrics": [
        "accuracy", "top_k_acc"
    ],

    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 8,
            "gamma": 0.1
        }
    },

    "trainer": {
        "epochs": 5,
        "warm_up": 2,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10
    }
}
